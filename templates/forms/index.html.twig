{% extends 'base.html.twig' %}

{% block title %}Forms index{% endblock %}

{% block body %}
    <h1>Forms index</h1>

    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Expiration_date</th>
            <th>User_participated</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for form in forms %}
            <tr>
                <td>{{ form.id }}</td>
                <td>{{ form.Title }}</td>
                <td>{{ form.Description }}</td>
                <td>{{ form.expirationDate ? form.expirationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_forms_show', {'id': form.id}) }}">show</a>
                    <a href="{{ path('app_forms_edit', {'id': form.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>


    <a href="{{ path('app_forms_new') }}">Create new</a>
{% endblock %}
